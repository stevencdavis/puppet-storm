# /etc/default/storm

export JAVA_LIBRARY_PATH="<%= scope.lookupvar('storm::params::java_library_path').join(':') %>"
export STORM_USER="<%= scope.lookupvar('storm::params::storm_user') %>"
export STORM_HOME="<%= scope.lookupvar('storm::params::storm_home') %>"
export STORM_LIB="<%= scope.lookupvar('storm::params::storm_lib') %>"
export STORM_JAR="<%= scope.lookupvar('storm::params::storm_jar') %>"
export STORM_CONF_DIR="<%= scope.lookupvar('storm::params::storm_conf_dir') %>"
export STORM_CLASSPATH="<% scope.lookupvar('storm::params::storm_classpath').each do |p| -%>$(echo <%= p %> | tr ' ' ':'):"<% end -%>


export STORM_OPTIONS="<%= scope.lookupvar('storm::params::storm_options') %>"
